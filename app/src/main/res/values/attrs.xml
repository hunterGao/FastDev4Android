<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义带秒针的钟表-->
    <declare-styleable name="SecondClock">
        <attr name="dial" format="integer" />
        <attr name="hand_minute" format="integer"/>
        <attr name="hand_hour" format="integer"/>
        <attr name="hand_second" format="integer"/>
    </declare-styleable>
    <!--自定义GridView-->
    <declare-styleable name="CustomGridLayout">
        <attr name="numColumns" format="integer" />
        <attr name="itemMargin" format="integer" />
    </declare-styleable>
    <!--日间模式和夜间模式使用的属性-->
    <attr name="container_background" format="reference|color"/>
    <attr name="card_background" format="reference|color"/>
    <attr name="title_color" format="reference|color"/>
    <attr name="text_color" format="reference|color"/>
    <attr name="selector_btn" format="reference"/>
    <attr name="selector_list_item" format="reference"/>

    <!--可以展示gif图的View-->
    <declare-styleable name="GifMoviewView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifMoviewViewStyle" format="reference" />
    </declare-styleable>
</resources>