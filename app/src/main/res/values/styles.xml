<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--日间模式-->
    <style name="AppTheme.day" parent="AppTheme">
        <item name="container_background">@color/day_container_bg</item>
        <item name="title_color">@color/day_title_color</item>
        <item name="text_color">@color/day_text_color</item>
    </style>
    <!--夜间模式-->
    <style name="AppTheme.night" parent="AppTheme">
        <item name="container_background">@color/night_container_bg</item>
        <item name="title_color">@color/night_title_color</item>
        <item name="text_color">@color/night_text_color</item>
    </style>

    <style name="Widget.GifMoviewView" parent="@android:style/Widget"></style>

</resources>
